<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anger.pruebafirebase">
    <uses-permission android:name="android.permission.NFC"/>

    <!--Esto es para que la aplicacion solo aparezca para las personas que
    tienen NFC en su celular-->
    <uses-feature android:name="android.hardware.nfc" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DetalleTurnoNegocioActivity"></activity>
        <activity android:name=".TipoServicioActivity" />
        <activity android:name=".SucursalActivity" />
        <activity android:name=".DetalleTurnoCajaActivity" />
        <activity android:name=".DondeActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>



        </activity>
    </application>

</manifest>